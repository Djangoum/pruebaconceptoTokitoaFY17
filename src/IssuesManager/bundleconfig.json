[
  {
    "outputFileName": "wwwroot/css/site.min.css",
    // An array of relative input file paths. Globbing patterns supported
    "inputFiles": [
      "Content/Styles/site.css"
    ]
  },
  {
    "outputFileName": "wwwroot/js/Login.min.js",
    "inputFiles": [
      "Scripts/Login/Main.js",
      "Scripts/Login/LoginController.js",
      "Scripts/Login/RegisterController.js",
      "Scripts/Login/Services.js",
      "Scripts/Login/Translations.js",
      "Scripts/Login/Constants.js",
      "Scripts/Common/LoadingDirective.js"
